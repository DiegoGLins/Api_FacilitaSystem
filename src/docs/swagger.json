{
  "openapi": "3.0.3",
  "info": {
    "title": "API-Facilita-System",
    "description": "A api facilita-system é um gerenciador de tarefas, usada para criar, editar e excluir tarefas, facilitando uma agenda diária de ativvidades do usuário",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api-facilitasystem.onrender.com/docs"
    }
  ],
  "tags": [
    {
      "name": "usuarios",
      "description": "Rota pra cadastro e listagem de usuários"
    },
    {
      "name": "tasks",
      "description": "Rotas para criar, listar, editar e excluir tarefas"
    }
  ],
  "paths": {
    "/auth": {
      "description": "Rota para realizar autenticação",
      "post": {
        "tags": ["auth"],
        "summary": "Loga o usuário no sistema",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login realizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "type": "object",
                      "properties": {
                        "userLogin": {
                          "$ref": "#/components/schemas/userLogin"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado"
          },
          "401": { "description": "Email ou senha incorretos" }
        }
      }
    },
    "/users/show": {
      "get": {
        "tags": ["usuarios"],
        "summary": "Lista todos os usuários cadastrados na aplicação",
        "responses": {
          "200": {
            "description": "Usuários listados com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/users"
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    },
    "/users": {
      "post": {
        "tags": ["usuarios"],
        "summary": "Cadastra um usuário na aplicação passando nome, email e senha ",
        "description": "Rota para cadastro de usuario",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "email": { "type": "string" },
                  "password": { "type": "string" }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "Usuário cadastrado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/createUser"
                }
              }
            }
          },
          "400": {
            "description": "Email já cadastrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/createUser-reject"
                }
              }
            }
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      }
    },
    "/tasks": {
      "get": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "tags": ["tasks"],
        "summary": "Lista as tarefas do usuário logado",
        "description": "Isso só pode ser feito por um usuário logado",
        "responses": {
          "200": {
            "description": "Tarefas listadas com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/tasks"
                }
              }
            }
          },
          "404": {
            "description": "Usuário não encontrado"
          },
          "500": {
            "description": "Erro interno no servidor"
          },
          "401": {
            "description": "Autenticação do token falhou"
          }
        }
      },
      "post": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "tags": ["tasks"],
        "summary": "Cria uma tarefa para o usuario logado passando nome e descrição da tarefa",
        "description": "Isso só pode ser feito por um usuário logado",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "description": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Tarefa criada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/task-create"
                }
              }
            }
          },
          "400": {
            "description": "Preencha todos os campos"
          },
          "500": {
            "description": "Erro ao criar tarefa"
          }
        }
      }
    },
    "/tasks/{taskId}": {
      "put": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "tags": ["tasks"],
        "summary": "Edita uma tarefa",
        "description": "Isso só pode ser feito por um usuário logado. Edita o conteúdo da tarefa",
        "parameters": [
          {
            "name": "taskId",
            "in": "path",
            "description": "O id da tarefa a ser editada, deve ser passado",
            "require": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "description": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Tarefa editada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/task-update"
                }
              }
            }
          },
          "400": {
            "description": "Tarefa para editar não encontrada"
          },
          "401": {
            "description": "Autenticação do token falhou"
          },
          "500": {
            "description": "Erro interno do servidor"
          }
        }
      },
      "delete": {
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "tags": ["tasks"],
        "summary": "Exclui uma tarefa",
        "description": "Isso só pode ser feito por um usuário logado. Exclui uma tarefa passando o id",
        "parameters": [
          {
            "name": "taskId",
            "in": "path",
            "description": "O id da tarefa a ser excluida, deve ser passado",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#components/schemas/task-delete"
                }
              }
            }
          },
          "404": {
            "description": "Tarefa para excluir não encontrada"
          },
          "500": {
            "description": "Erro interno do servidor"
          },
          "401": {
            "description": "Autenticação do token falhou"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "userLogin": {
        "type": "object",
        "properties": {
          "ok": { "type": "boolean", "example": true },
          "code": { "type": "number", "example": 200 },
          "message": {
            "type": "string",
            "example": "Login realizado com sucesso"
          },
          "data": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "email": { "type": "string" }
            }
          },
          "token": { "type": "string" }
        }
      },
      "createUser": {
        "type": "object",
        "properties": {
          "ok": { "type": "boolean" },
          "code": { "type": "number", "example": 201 },
          "message": {
            "type": "string",
            "example": "Cadastro realizado com sucesso"
          },
          "data": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "email": { "type": "string" }
            }
          }
        }
      },
      "createUser-reject": {
        "type": "object",
        "properties": {
          "ok": { "type": "boolean" },
          "code": { "type": "number", "example": 400 },
          "message": { "type": "string", "example": "Email já cadastrado" }
        }
      },
      "users": {
        "type": "object",
        "properties": {
          "ok": { "type": "boolean" },
          "code": { "type": "number", "example": 200 },
          "message": { "type": "string" },
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "name": { "type": "string" },
                "email": { "type": "string" }
              }
            }
          }
        }
      },
      "tasks": {
        "type": "object",
        "properties": {
          "ok": { "type": "boolean" },
          "code": { "type": "number", "example": 200 },
          "message": {
            "type": "string",
            "example": "Tarefas listadas com sucesso"
          },
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "name": { "type": "string" },
                "description": { "type": "string" },
                "createdAt": { "type": "string", "format": "date-time" },
                "userId": { "type": "string" }
              }
            }
          }
        }
      },
      "task-create": {
        "type": "object",
        "properties": {
          "ok": { "type": "boolean" },
          "code": { "type": "number", "example": 201 },
          "message": {
            "type": "string",
            "example": "Tarefa criada com sucesso"
          },
          "data": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "description": { "type": "string" },
              "createdAt": { "type": "string", "format": "date-time" },
              "userId": { "type": "string" }
            }
          }
        }
      },
      "task-update": {
        "type": "object",
        "properties": {
          "ok": { "type": "boolean" },
          "code": { "type": "number", "example": 200 },
          "message": {
            "type": "string",
            "example": "Tarefa editada com sucesso"
          },
          "data": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "description": { "type": "string" },
              "createdAt": { "type": "string", "format": "date-time" },
              "userId": { "type": "string" }
            }
          }
        }
      },
      "task-delete": {
        "type": "object",
        "properties": {
          "ok": { "type": "boolean" },
          "code": { "type": "number", "example": 200 },
          "message": {
            "type": "string",
            "example": "Tarefa excluida com sucesso"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": {
    "bearerAuth": []
  }
}
